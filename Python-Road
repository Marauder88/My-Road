def calculator(num):
    input("> ENTER to begin")
    print (f'your current number is {num: .1f} and it will go through operations')
    fnum = num * 2
    snum = fnum * 2
    tnum = snum * 2
    print (f'original number was {num: .1f}\nthen first number became {fnum: .1f}, second is {snum: .1f} and third and final number is {tnum: .1f}')
    return fnum, snum, tnum
    input ('> press ENTER')

# print ('first way to call a function is')
# calculator(200)

# print ('second way to call the function is') 
# num = 88172
# calculator (num)   

# print ('third way')
new_number = 100000
# fnum, snum, tnum = calculator(new_number)
# print ('so with a new number of {}'.format(new_number),'\nThe first number would be', (fnum), 'second number would be', (snum), 'and third number would be', (tnum))

new_number = new_number / 4.3
random_number = new_number / 4.3

random = calculator(new_number)

print ('We would have {: .1f} as first number {: .1f} as second number {: .1f} as third number'.format(*random))

