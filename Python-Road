#CAR DEALERSHIP / 3
from sys import argv

file = argv

s = " < "

print (f'welcome to the {file} car dealership, what is your name?')
name = input(s) 

print (f'good to meet you {name}! which veichle brand are you intrested in? ')
brand = input(s)

print (f'model?')
model = input(s)

print (f' so you are looking for a {brand} {model} veichle, which year edition {name}?')
year = input(s)

print(f' that is awesome and what about your budget?')
budget = input(s)

print (f'good to know {name} with a budget of {budget} you can definetly purchase a {brand} {model} {year} year edition, have a good day')
